			<div class="input-box">
				<input type="text" class="input-field" id="name" name="name" placeholder="Username" autocomplete="off" required>
			</div>
			<div class="input-box">
				<input type="password" class="input-field" id="password" name="password" placeholder="Password"
					autocomplete="off" required>
			</div>
			<div class="login-submit">
				<button class="submit-btn" id="submit"></button>
				<label for="submit">Sign In</label>
			</div>
		</form>
		<div class="sign-up-link">
			<p>Don't have account? <a href="/signup">Sign Up</a></p>
		</div>
	</div>


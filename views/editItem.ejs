    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container">
            <a class="navbar-brand fs-2" href="/admin/items">Items</a>
            <a class="mx-auto navbar-brand fs-2" href="/admin">User Management</a>
            <form class="form-inline" action="/admin/logout" method="post">
                <button class="btn btn-danger" type="submit">Logout</button>
            </form>
        </div>
    </nav>

    <div class="container mb-5 pb-3">
        <h1 class="mt-5 mb-4">Edit Item</h1>
        <form action="/admin/items/editItem" method="post">
            <div class="mb-3">
                <label for="editItemId" class="form-label">Item ID:</label>
                <input type="text" class="form-control" id="editItemId" name="editItemId" required>
            </div>
            <div class="mb-3">
                <label for="editItemNameEN" class="form-label">English Name:</label>
                <input type="text" class="form-control" id="editItemNameEN" name="editItemNameEN">
            </div>
            <div class="mb-3">
                <label for="editItemNameRU" class="form-label">Russian Name:</label>
                <input type="text" class="form-control" id="editItemNameRU" name="editItemNameRU">
            </div>
            <div class="mb-3">
                <label for="editItemDescEN" class="form-label">English Description:</label>
                <input type="text" class="form-control" id="editItemDescEN" name="editItemDescEN">
            </div>
            <div class="mb-3">
                <label for="editItemDescRU" class="form-label">Russian Description:</label>
                <input type="text" class="form-control" id="editItemDescRU" name="editItemDescRU">
            </div>
            <div class="mb-3">
                <label for="editPictureSelect" class="form-label">Picture URL:</label>
                <select class="form-select" id="editPictureSelect" name="editPictureSelect">
                    <option value="editPicture1">Picture 1</option>
                    <option value="editPicture2">Picture 2</option>
                    <option value="editPicture3">Picture 3</option>
                </select>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="editPicture" name="editPicture">
            </div>
            <button type="submit" class="btn btn-success">Edit Item</button>
        </form>
    </div>

